    <show chara="biankaDressDarkClose" position="right" opacity="0.8"/>
    <show chara="OfficerClose" position="left"/>
    <speak chara="_OfficerNoName">……何者だ？</speak>
    <show chara="OfficerClose" position="left" opacity="0.8"/>
    <show chara="biankaDressSneerClose" position="right"/>
    <speak chara="_BiankaOutsiderNoName">言っても、ご存じないかもしれませんが——</speak>
    <show chara="biankaDressShoutClose" position="right"/>
